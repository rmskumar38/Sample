<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressBarStyle" parent="AppTheme">

        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/colorProgress</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="titleTextViewStyle" parent="Widget.AppCompat.TextView">

        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="contentTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="offerTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="offerDecTitleStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

</resources>
